# Add Cabal to path
set -Ux PATH $HOME/.cask/bin $HOME/.cabal/bin $PATH

# Terminal for colours
set -Ux TERM xterm-256color

# Set emacs as editor
set -Ux EDITOR "emacsclient -t"

# Add colours to grep
set -Ux GREP_OPTIONS "--color=auto"

# Homebrew
set -Ux HOMEBREW_CASK_OPTS "--appdir=/Applications"
